<h1>Countries</h1>
<table id="country-table">
    <thead>
        {{!-- First row as header --}}
        <tr>
            {{#each headers}}
            <th>
                {{this}}
            </th>
            {{/each}}
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        {{!-- For each row, print the fields--}}
        {{#each data}}
        <tr>
            <form action="/update_delete_country" method="POST">
                <td><input name="country_id" value="{{this.CTR_ID}}" readonly></td>
                <td><input name="country_name" value="{{this.CTR_NAME}}"></td>
                <td><input name="country_code" value="{{this.CTR_CODE}}"></td>
                <td><input type="submit" name="action" value="Update" /></td>
                <td><input type="submit" name="action" value="Delete" /></td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>
<br>
    <b>Update:</b> Please edit data in the table directly and click 'Update'.<br>
    <b>Delete:</b> Please click 'Delete' next to each record.<br>
{{!--Input fields--}}
<h2>Add country</h2>
<p>Please enter the name and code of country and press submit button to add a new country</p>
<form id="add-country-form" method="POST" action="/add-country-form">
    <label for="input-countryname">Country Name: </label>
    <input type="text" name="input-countryname" id="input-countryname">
    <label for="input-countrycode">Country Code: </label>
    <input type="text" name="input-countrycode" id="input-countrycode">
    <input type="submit">
</form>
